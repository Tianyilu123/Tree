
class Solution {
    private int res = 0;
    public int sumNumbers(TreeNode root) {
        if(root == null) return 0;
        helper(root, 0);
        return res;
    }
    
    private void helper(TreeNode root, int cur) {
        if(root == null) return;
        cur = 10*cur + root.val;
        if(root.left == null && root.right == null) {
            res += cur;
        }
        helper(root.left, cur);
        helper(root.right, cur);
    }
}
